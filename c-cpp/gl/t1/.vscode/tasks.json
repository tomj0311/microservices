{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"C:\\vcpkg\\installed\\x64-windows\\lib\\gl3w.lib",
				"C:\\vcpkg\\installed\\x64-windows\\lib\\glfw3dll.lib",
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		}
	]
}